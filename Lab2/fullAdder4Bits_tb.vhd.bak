library IEEE;
use IEEE.STD_LOGIC_1164.all;
use IEEE.NUMERIC_STD.all;


entity fullAdder4Bits_tb is
end fullAdder4Bits_tb;

architecture testbench of fullAdder4Bits_tb is
    signal a, b, s : STD_LOGIC_VECTOR(3 downto 0);
    signal Cout   : STD_LOGIC;
begin
    UUT : entity work.fullAdder4Bits port map (a => a, b => b, s => s, Cout => Cout);

    a <=  "0000" after 0.05 ns,
          "0000" after 0.15 ns,
          "1111" after 0.25 ns,
          "1010" after 0.35 ns,
          "1111" after 0.45 ns;
    b <=  "0000" after 0.05 ns,
          "1111" after 0.15 ns,
          "0000" after 0.25 ns,
          "0101" after 0.35 ns,
          "1111" after 0.45 ns;

    assert a = "0000" and b = "0000" and S = "0000" and Cout = '0' report "There is an incorrect value on the output led" severity error;
    assert a = "0000" and b = "1111" and S = "1111" and Cout = '0' report "There is an incorrect value on the output led" severity error;
    assert a = "1111" and b = "0000" and S = "1111" and Cout = '0' report "There is an incorrect value on the output led" severity error;
    assert a = "1010" and b = "0101" and S = "0100" and Cout = '1' report "There is an incorrect value on the output led" severity error;
    assert a = "1111" and b = "1111" and S = "1110" and Cout = '1' report "There is an incorrect value on the output led" severity error;
end testbench;